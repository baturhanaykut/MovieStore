@model LoginDTO


<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="../../index2.html" class="h1"><b>Admin</b>LTE</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Login a new membership</p>

                <form asp-action="Login" asp-controller="Account" asp-route-returnUrl=@ViewData["ReturnUrl"] method="post">
                    <div class="input-group mb-3">
                        <input asp-for="UserName" type="text" class="form-control" placeholder="User name">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input asp-for=Password type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <a asp-action="Register" class="btn btn-primary btn-block">Register</a>
                        </div>
                        <div class="col-6">
                            <input type="submit" class="btn btn-success btn-block" value="Login" />
                        </div>
                        
                    </div>
                </form>
            </div>
           
        </div>
    </div>
</div>
