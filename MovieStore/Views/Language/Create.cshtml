@model LanguageVM


<h2 class="text-ligth mt-3">New Language</h2>

<form asp-controller="Language" asp-action="create" method="post">
    <fieldset>
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4">@Html.DisplayNameFor(x=>x.Name)</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Starring First Name" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label asp-for="OriginalLanguageOfMovies" class="form-label mt-4">@Html.DisplayNameFor(x=>x.OriginalLanguageOfMovies)</label>
            <input asp-for="OriginalLanguageOfMovies" class="form-control" placeholder="Enter Starring Last Name" />
            <span asp-validation-for="OriginalLanguageOfMovies" class="text-danger"></span>

        </div>

        

        <button type="submit" class="btn btn-primary mt-3">Create The Language</button>
    </fieldset>
</form>
<a class="btn btn-primary mt-3" asp-controller="Language" asp-action="index">Back To List</a>

