@model UpdateDirectorDTO

<h2 class="text-ligth mt-3">Delete Director</h2>

<form asp-controller="director" asp-action="delete" method="post">
    <fieldset>
        <div class="form-group">

            <label asp-for="Id" class="form-label mt-4">@Html.DisplayNameFor(x=>x.Id)</label>
            <input asp-for="Id" class="form-control" disabled />
            <input type="hidden" asp-for="Id" class="form-control" />

        </div>


        <div class="form-group">
            <label asp-for="FirstName" class="form-label mt-4">@Html.DisplayNameFor(x=>x.FirstName)</label>
            <input asp-for="FirstName" class="form-control" disabled />

        </div>

        <div class="form-group">
            <label asp-for="LastName" class="form-label mt-4">@Html.DisplayNameFor(x=>x.LastName)</label>
            <input asp-for="LastName" class="form-control"  disabled />

        </div>

        <div class="form-group">
            <label asp-for="BirthDate" class="form-label mt-4">@Html.DisplayNameFor(x=>x.BirthDate)</label>
            <input type="date" asp-for="BirthDate" class="form-control"  disabled />

        </div>

        <button type="submit" class="btn btn-primary mt-3">Delete The Director</button>
    </fieldset>
</form>
<a class="btn btn-danger mt-3" asp-controller="Director" asp-action="index">Back To List</a>